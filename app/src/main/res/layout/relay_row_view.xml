<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <kolevmobile.com.smarthome.custom_components.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:expDuration="500"
        app:expWithParentScroll="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/relay_row_name"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/relay_name_text_view"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/delay_row_description"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/relay_description_text_view"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/relay_row_key"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/relay_key_text_view"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/refreshButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/ic_refresh_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/detailsButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:src="@drawable/ic_show_chart_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/ic_edit_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_black_24dp"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </kolevmobile.com.smarthome.custom_components.ExpandableLayout>

</LinearLayout>