<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relay_row_base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relay_row_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#bc0006"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/refreshButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                android:src="@drawable/ic_refresh_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/detailsButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                android:src="@drawable/ic_show_chart_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                android:src="@drawable/ic_edit_black_24dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                android:src="@drawable/ic_delete_black_24dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/relay_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/relay_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key" />

            <TextView
                android:id="@+id/relay_key_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>