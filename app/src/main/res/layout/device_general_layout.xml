<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/device_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/device_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_general_layout_name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/device_description_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/device_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_general_layout_description" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/device_url_input_layout"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <EditText
                android:id="@+id/device_url_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/device_general_layout_url_adress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/device_port_input_layout"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/device_port_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/device_general_layout_port_number"
                android:inputType="number"
                android:text="@string/device_general_layout_port_default"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
