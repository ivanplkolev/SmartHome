<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220sp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/card_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deviceNameTextView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Test Name 1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastRefreshTextView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Test Date 1"
            android:textSize="20sp" />

        <!--<TextView-->
        android:id="@+id/errorMessageTextView"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Test Error 1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/refreshButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh_black_24dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/detailsButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:src="@drawable/ic_show_chart_black_24dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/editButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_black_24dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_black_24dp"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/animation_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#71ff9f3f"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:indicatorColor="@android:color/holo_red_light"
                app:indicatorName="BallPulseRiseIndicator" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sensors_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/relays_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>